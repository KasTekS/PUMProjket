<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_marginTop="3dp"
        android:gravity="center"

        >


        <Button
            android:id="@+id/comupter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comupter"
            android:layout_marginLeft="5dp"


            />

        <Button
            android:id="@+id/multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/zaczynanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz kto zaczyna"
        android:visibility="invisible"
        android:textAlignment="center"
        />
    <LinearLayout
        android:id="@+id/start"
        android:layout_marginTop="3dp"
        android:gravity="center"
    android:visibility="invisible">
        >


        <Button
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:layout_marginLeft="5dp"/>


        <Button
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tryby2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz poziom trudnosci"
        android:visibility="invisible"
        android:textAlignment="center"
        />
    <LinearLayout
        android:id="@+id/tryb"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:visibility="invisible">


        <Button
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="easy" />

        <Button
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="medium" />
        <Button
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="hard" />
    </LinearLayout>

<TableLayout
    android:id="@+id/plansza"
    android:visibility="invisible"
    >
    <TextView
        android:id="@+id/stan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stan gry: "
        android:textAlignment="center"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:text="Player1 : 0"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:text="Player2 : 0"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/button00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"


            android:textSize="60dp" />

        <Button
            android:id="@+id/button01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"


            android:textSize="60dp" />

        <Button
            android:id="@+id/button02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"


            android:textColor="#000000"
            android:textSize="60dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/button10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:textColor="#000000"
            android:textSize="60dp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"


            android:textColor="#000000"
            android:textSize="60dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"


            android:textColor="#000000"
            android:textSize="60dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/button20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:textColor="#000000"
            android:textSize="60dp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"


            android:textColor="#000000"
            android:textSize="60dp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"


            android:textColor="#000000"
            android:textSize="60dp" />

    </TableRow>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/resetall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resetuj statystyki"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


</TableLayout>

    </TableLayout>

